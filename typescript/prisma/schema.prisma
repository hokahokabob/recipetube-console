generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//here is our own models
model notifications {
  id               Int      @id @default(autoincrement())
  title            String
  content          String
  notification_div NotificationDiv
  important        Boolean
  start_at         DateTime @db.DateTime
  end_at           DateTime @db.DateTime
  created          DateTime @default(now())
  updated          DateTime?
}

enum NotificationDiv {
  GENERAL
  MAINTENANCE
  TROUBLE_REPORT
}
